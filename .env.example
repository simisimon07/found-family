# Copy to `.env` and fill values for local development only.
# Do NOT commit your real .env to version control.

# Google / Gemini API key
GEMINI_API_KEY=your_gemini_api_key_here
# Alternative key name sometimes used
GOOGLE_API_KEY=your_google_api_key_here

# Flask settings
SECRET_KEY=replace_this_with_a_secure_random_value
FLASK_ENV=development

# Database (optional) - use a managed DB in production
DATABASE_URL=sqlite:///guardian_shield.db

# Port (Render sets this automatically)
PORT=8000
